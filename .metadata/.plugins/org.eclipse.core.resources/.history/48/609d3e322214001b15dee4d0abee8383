package com.qa.shop.base;

public class Stringtest {

	public static void main(String[] args) {
		String amt = "Thank you for your purchase!\r\n" + 
				"Id: 9967223\r\n" + 
				"Amount: 790 USD\r\n" + 
				"Card Number: 12345678\r\n" + 
				"Name: Aman\r\n" + 
				"Date: 22/9/2020\r\n" + 
				"OK";
		
		
		
		amt.indexOf("Amount: ");
		amt.substring(amt.indexOf("Amount: "), amt.indexOf("Card"));
		
		
	System.out.println(amt);

	}

}
